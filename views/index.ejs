<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        .table img {
            max-width: 150px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Movies List</h2>
        <a href="/add" class="btn btn-primary mb-3">Add New Movie</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Release Date</th>
                    <th>Genre</th>
                    <th>Rating</th>
                    <th>Poster</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% movies.forEach((movie, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= movie.title %></td>
                        <td><%= movie.description %></td>
                        <td><%= new Date(movie.releaseDate).toDateString() %></td>
                        <td><%= movie.genre %></td>
                        <td><%= movie.rating %></td>
                        <td><img src="/<%= movie.poster %>" alt="<%= movie.title %>"></td>
                        <td>
                            <a href="/edit/<%= movie._id %>" class="btn btn-warning btn-sm">Edit</a> ||
                            <a href="/delete/<%= movie._id %>" class="btn btn-danger btn-sm">Delete</a> ||
                            <a href="/view/<%= movie._id %>" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
